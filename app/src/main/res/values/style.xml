<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <style name="orange_status_bar" parent="Base.Theme.CyberGo">
        <item name="android:statusBarColor">@color/orange</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="txt_from_cyber_space">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="icon_button">
        <item name="android:layout_width">36sp</item>
        <item name="android:layout_height">36sp</item>
        <item name="android:background">@drawable/shape_icon_sub_button</item>
        <item name="android:padding">8sp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_50sdp</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginEnd">@dimen/_12sdp</item>
        <item name="android:layout_marginTop">@dimen/_19sdp</item>
    </style>

    <style name="edit_text_input">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="btn_primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_39sdp</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginEnd">@dimen/_12sdp</item>
        <item name="android:layout_marginBottom">@dimen/_14sdp</item>
        <item name="android:background">@drawable/shape_btn_primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="btn_login_by">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:background">@drawable/shape_ic_login_by</item>
    </style>
</resources>