<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="view_model"
            type="com.tech.cybercars.ui.main.fragment.account.profile.user_statistic.UserStatisticViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            layout="@layout/header_primary"
            android:id="@+id/header_primary"
            app:title="@{@string/statistic}"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/input"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:endIconDrawable="@drawable/shape_ic_calendar_small"
                    app:endIconMode="custom"
                    app:endIconScaleType="center"
                    app:endIconTint="@null"
                    app:endIconTintMode="multiply">
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/edit_text_input"
                        android:textSize="@dimen/_10ssp"
                        android:padding="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:text="04/01/2024"
                        android:hint="@string/start_date" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/input"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:endIconDrawable="@drawable/shape_ic_calendar_small"
                    app:endIconMode="custom"
                    app:endIconScaleType="center"
                    app:endIconTint="@null"
                    app:endIconTintMode="multiply">
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/edit_text_input"
                        android:textSize="@dimen/_10ssp"
                        android:padding="0dp"
                        android:layout_height="@dimen/_25sdp"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:text="04/30/2024"
                        android:hint="@string/end_date" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <com.github.mikephil.charting.charts.BarChart
                android:layout_margin="@dimen/_25sdp"
                android:id="@+id/trip_by_vehicle_chart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <com.github.mikephil.charting.charts.PieChart
                android:layout_margin="@dimen/_25sdp"
                android:id="@+id/revenue_by_vehicle_chart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</layout>