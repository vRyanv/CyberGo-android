<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="view_model"
            type="com.tech.cybercars.ui.main.fragment.account.profile.edit_id_card.EditIdentityCardViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <include
            layout="@layout/partial_loading_primary"
            app:show="@{view_model.is_loading}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout style="@style/layout_header_box">

                <ImageButton
                    android:id="@+id/btn_out_screen"
                    style="@style/icon_button_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_arrow" />

                <TextView
                    style="@style/txt_title_header"
                    android:text="@string/identity_card"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5" />

                <ImageButton
                    android:id="@+id/btn_save_id_card"
                    style="@style/icon_button_back"
                    android:layout_marginEnd="@dimen/_16sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_save" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <LinearLayout
                        android:id="@+id/title_front_id_card"
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/label_front_id_card"
                            style="@style/form_label"
                            android:layout_margin="0dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:text="@string/front_id_card"
                            app:layout_constraintBottom_toTopOf="@+id/img_front_id_card"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <ImageButton
                                android:id="@+id/btn_upload_front_id_card"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:background="@color/transparent"
                                android:scaleType="center"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_img_upload" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_front_id_card"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_marginHorizontal="@dimen/padding_horizontal"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/shape_btn_outline"
                        android:scaleType="centerInside"
                        android:src="@drawable/thumb_id_card"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/title_front_id_card" />

                    <LinearLayout
                        android:id="@+id/title_back_id_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginHorizontal="@dimen/_16sdp"
                        app:layout_constraintTop_toBottomOf="@+id/img_front_id_card">

                        <TextView
                            android:id="@+id/label_back_id_card"
                            style="@style/form_label"
                            android:layout_margin="0dp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:text="@string/back_id_card"
                            app:layout_constraintBottom_toTopOf="@+id/img_front_id_card"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content">

                            <ImageButton
                                android:id="@+id/btn_upload_back_id_card"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:background="@color/transparent"
                                android:scaleType="center"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_img_upload" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_back_id_card"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_150sdp"
                        android:layout_marginHorizontal="@dimen/padding_horizontal"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/shape_btn_outline"
                        android:scaleType="centerInside"
                        android:src="@drawable/thumb_id_card"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/title_back_id_card" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>
</layout>