<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="view_model"
            type="com.tech.cybercars.ui.main.user_profile.UserProfileViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout style="@style/layout_header_box">

                <ImageButton
                    android:id="@+id/btn_out_screen"
                    style="@style/icon_button_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_arrow" />

                <com.willy.ratingbar.BaseRatingBar
                    android:id="@+id/rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5"
                    app:srb_clearRatingEnabled="true"
                    app:srb_clickable="true"
                    app:srb_drawableEmpty="@drawable/ic_star_off"
                    app:srb_drawableFilled="@drawable/ic_star"
                    app:srb_isIndicator="false"
                    app:srb_minimumStars="0"
                    app:srb_numStars="5"
                    app:srb_rating="2"
                    app:srb_scrollable="true"
                    app:srb_starHeight="@dimen/_15sdp"
                    app:srb_starPadding="@dimen/_1sdp"
                    app:srb_starWidth="@dimen/_15sdp"
                    app:srb_stepSize="1" />

                <ImageButton
                    android:id="@+id/btn_open_chat_user"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:background="@drawable/shape_icon_sub_button"
                    android:padding="@dimen/_4sdp"
                    android:scaleType="fitCenter"
                    android:visibility="@{view_model.is_loading ? View.INVISIBLE : View.VISIBLE}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_chat" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/skeleton_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:visibility="@{view_model.is_loading ? View.VISIBLE : View.GONE, default=gone}">

                <include layout="@layout/skeleton_profile" />
            </com.facebook.shimmer.ShimmerFrameLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_avatar"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:elevation="12dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:thicknessRatio="1.9"
                    app:cardCornerRadius="100dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/img_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/gray"
                        android:scaleType="fitXY" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/txt_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:fontFamily="@font/sp_pro_round_black_semibold"
                    android:text="@string/full_name"
                    android:textSize="@dimen/_15ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_avatar" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/card_avatar">

                    <LinearLayout style="@style/layout_label_profile">
                        <ImageView
                            style="@style/icon_label_profile"
                            android:src="@drawable/ic_email" />
                        <TextView
                            android:id="@+id/txt_email"
                            style="@style/text_label_profile"
                            android:text="@string/email" />
                    </LinearLayout>
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/gray"/>
                    <LinearLayout style="@style/layout_label_profile">

                        <ImageView
                            style="@style/icon_label_profile"
                            android:src="@drawable/ic_contact_phone" />

                        <TextView
                            android:id="@+id/txt_phone"
                            style="@style/text_label_profile"
                            android:text="@string/phone_number" />
                    </LinearLayout>
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/gray"/>
                    <LinearLayout style="@style/layout_label_profile">

                        <ImageView
                            style="@style/icon_label_profile"
                            android:src="@drawable/ic_gender" />

                        <TextView
                            android:id="@+id/txt_gender"
                            style="@style/text_label_profile"
                            android:layout_gravity="center"
                            android:text="@string/gender" />
                    </LinearLayout>
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/gray"/>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/gray"/>
                    <LinearLayout style="@style/layout_label_profile">
                        <ImageView
                            style="@style/icon_label_profile"
                            android:src="@drawable/ic_birthday_cake" />
                        <TextView
                            android:id="@+id/txt_birthday"
                            style="@style/text_label_profile"
                            android:layout_gravity="center"
                            android:text="@string/birthday" />
                    </LinearLayout>
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/gray"/>
                    <LinearLayout style="@style/layout_label_profile">

                        <ImageView
                            style="@style/icon_label_profile"
                            android:src="@drawable/ic_home" />

                        <TextView
                            android:id="@+id/txt_address"
                            style="@style/text_label_profile"
                            android:text="@string/address" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </RelativeLayout>
</layout>