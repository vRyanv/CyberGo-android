<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="view_model"
            type="com.tech.cybercars.ui.main.fragment.setting.profile.edit_phone.EditPhoneViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <include
            layout="@layout/partial_loading_primary"
            app:show="@{view_model.is_loading}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout style="@style/layout_header_box">

                <ImageButton
                    android:id="@+id/btn_out_screen"
                    style="@style/icon_button_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_arrow" />

                <TextView
                    style="@style/txt_title_header"
                    android:text="@string/edit_phone_number"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/phone_number_wrapper"
                    style="@style/input"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:background="@drawable/shape_input_outline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/country_code_picker"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="match_parent"
                        android:gravity="start|center"
                        app:ccpDialog_textColor="@color/black"
                        app:ccp_areaCodeDetectedCountry="true"
                        app:ccp_arrowColor="@color/black"
                        app:ccp_autoDetectCountry="true"
                        app:ccp_contentColor="@color/black"
                        app:ccp_showNameCode="false" />

                    <View
                        android:id="@+id/divider3"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:background="?android:attr/listDivider" />

                    <EditText
                        android:id="@+id/input_phone"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_weight="2"
                        android:background="@drawable/flag_transparent"
                        android:hint="@string/phone_number"
                        android:inputType="phone"
                        android:paddingStart="@dimen/_15sdp"
                        android:text="@={view_model.phone_number}"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_phone_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="@{view_model.phone_number_error}"
                    android:textColor="#BA1A1A"
                    android:textSize="@dimen/_9ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/phone_number_wrapper" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_update_phone"
                    style="@style/btn_primary"
                    android:text="@string/update"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                </androidx.appcompat.widget.AppCompatButton>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>