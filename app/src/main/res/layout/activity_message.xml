<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="view_model"
            type="com.tech.cybercars.ui.main.chat.message.MessageViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/btn_out_screen"
                style="@style/icon_button_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_arrow" />
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/img_avatar"
                android:scaleType="fitXY"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_width="@dimen/_40sdp"
                android:layout_gravity="center"
                android:background="@color/gray"
                app:riv_corner_radius="30dip"
                app:riv_mutate_background="true"
                app:riv_oval="true" />

            <TextView
                android:id="@+id/txt_full_name"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sp_pro_round_black"
                android:text="@string/full_name" />
        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_message"
            tools:listitem="@layout/item_right_message"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:paddingHorizontal="@dimen/_5sdp"
            android:background="@color/light_gray"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="@dimen/_50sdp">
            <EditText
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_width="0dp"
                android:layout_weight="1"
                 android:layout_height="wrap_content"/>
            <ImageView
                android:background="@drawable/shape_icon_sub_button"
                android:padding="@dimen/_5sdp"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/ic_send"
                />
        </LinearLayout>
    </LinearLayout>
</layout>
