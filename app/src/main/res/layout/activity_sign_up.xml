<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
         <import type="android.view.View"/>
         <variable
            name="sign_up_view_model"
            type="com.tech.cybercars.ui.signup.SignUpViewModel" />
    </data>
    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <FrameLayout
            android:id="@+id/progressBarHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp"
            android:animateLayoutChanges="true"
            android:background="@drawable/flag_transparent"
            android:clickable="true"
            android:visibility="@{sign_up_view_model.is_loading ? View.VISIBLE : View.GONE }">
            <ProgressBar
                android:id="@+id/progressBar"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="@color/orange"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true" />
        </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            style="@style/layout_header_box"
          >

            <TextView
                android:id="@+id/textView8"
                android:text="@string/sign_up"
                style="@style/txt_title_header"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5"/>

            <ImageButton
                android:id="@+id/imageButton"
                style="@style/icon_button_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_arrow"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="12">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_full_name_sign_up"
                    style="@style/input"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:errorEnabled="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:errorIconDrawable="@null"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/edit_text_input"
                        android:hint="@string/full_name"
                        android:text="@={sign_up_view_model.full_name}" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_email_sign_up"
                    style="@style/input"
                    app:errorEnabled="true"
                    app:errorIconDrawable="@null"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/input_full_name_sign_up">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/edit_text_input"
                        android:hint="@string/email"
                        android:inputType="text"
                        android:text="@={sign_up_view_model.email}" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/phone_number_wrapper"
                    style="@style/input"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_input_outline"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/input_email_sign_up">

                    <com.hbb20.CountryCodePicker
                        android:id="@+id/country_code_picker_sign_up"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="match_parent"
                        android:gravity="start|center"
                        app:ccpDialog_textColor="@color/black"
                        app:ccp_areaCodeDetectedCountry="true"
                        app:ccp_arrowColor="@color/black"
                        app:ccp_autoDetectCountry="true"
                        app:ccp_contentColor="@color/black"
                        app:ccp_showNameCode="false" />
                    <View
                        android:id="@+id/divider3"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:layout_height="match_parent"
                        android:background="?android:attr/listDivider" />

                    <EditText
                        android:id="@+id/input_phone_sign_up"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_weight="2"
                        android:background="@drawable/flag_transparent"
                        android:hint="@string/phone_number"
                        android:inputType="number"
                        android:paddingStart="@dimen/_15sdp"
                        android:text="@={sign_up_view_model.phone_number}" />

                </LinearLayout>
                <TextView
                    android:id="@+id/txt_phone_error_sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_9ssp"
                    android:textColor="#BA1A1A"
                    android:text="@{sign_up_view_model.phone_number_error}"
                    android:layout_marginStart="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/phone_number_wrapper" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_gender_sign_up"
                    style="@style/input"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:focusable="false"
                    app:errorIconDrawable="@null"
                    app:errorEnabled="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/phone_number_wrapper">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/edit_text_input"
                        android:enabled="true"
                        android:focusable="false"
                        android:hint="@string/gender"
                        android:inputType="none"
                        android:text="@{sign_up_view_model.gender}" />
                </com.google.android.material.textfield.TextInputLayout>

                <CheckBox
                    android:id="@+id/cb_term_policy"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:textSize="@dimen/_10ssp"
                    android:paddingStart="@dimen/_15sdp"
                    android:checked="@={sign_up_view_model.agree_term_policy}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/input_gender_sign_up" />

                <TextView
                    android:id="@+id/txt_agree_term_policy"
                    android:layout_width="@dimen/_250sdp"
                    android:textColorHighlight="@color/transparent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="@string/agree_term_policy"
                    app:layout_constraintStart_toEndOf="@+id/cb_term_policy"
                    app:layout_constraintTop_toBottomOf="@+id/input_gender_sign_up" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_sign_up"
                    android:onClick="@{()->sign_up_view_model.handleLogin()}"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_39sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_19sdp"
                    android:background="@drawable/shape_btn_primary"
                    android:text="@string/sign_up"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cb_term_policy" />

                <LinearLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_11ssp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_sign_up">

                    <View
                        android:id="@+id/divider"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sp_pro_round_medium"
                        android:padding="@dimen/_5ssp"
                        android:text="@string/or"
                        android:textColor="@color/secondary"
                        android:textSize="@dimen/_11ssp" />

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:background="?android:attr/listDivider" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_11ssp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                    <ImageButton
                        android:id="@+id/btn_sign_up_gg"
                        style="@style/btn_login_by"
                        android:layout_marginEnd="@dimen/_15sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/btn_sign_up_fb"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.5"
                        app:srcCompat="@drawable/ic_google" />

                    <ImageButton
                        android:id="@+id/btn_sign_up_fb"
                        style="@style/btn_login_by"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.5"
                        app:srcCompat="@drawable/ic_facebook" />

                    <ImageButton
                        android:id="@+id/btn_sign_up_apple"
                        style="@style/btn_login_by"
                        android:layout_marginStart="@dimen/_15sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/btn_sign_up_fb"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0"
                        app:srcCompat="@drawable/ic_apple" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/txt_already_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHighlight="@color/transparent"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_marginBottom="@dimen/_35sdp"
                    android:fontFamily="@font/sp_pro_round_regular"
                    android:text="@string/already_have_an_account"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout3"
                    app:layout_constraintBottom_toBottomOf="@+id/constraintLayout_signup"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </LinearLayout>
    </RelativeLayout>
</layout>