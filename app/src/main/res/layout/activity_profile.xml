<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="view_model"
            type="com.tech.cybercars.ui.main.fragment.setting.profile.ProfileViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <FrameLayout
            android:id="@+id/progressBarHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:background="@drawable/flag_transparent"
            android:clickable="true"
            android:elevation="10dp"
            android:visibility="@{view_model.is_loading ? View.VISIBLE : View.GONE, default=gone }">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:indeterminateTint="@color/orange"
                android:indeterminateTintMode="src_atop" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout style="@style/layout_header_box">

                <ImageButton
                    android:id="@+id/btn_out_screen"
                    style="@style/icon_button_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_arrow" />

                <TextView
                    style="@style/txt_title_header"
                    android:text="@string/profile"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.5" />

                <ImageButton
                    android:id="@+id/btn_open_edit_profile"
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:background="@drawable/shape_icon_sub_button"
                    android:padding="@dimen/_4sdp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_edit_profile" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_avatar"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:elevation="12dp"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:thicknessRatio="1.9"
                    app:cardCornerRadius="100dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/img_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/avatar" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/txt_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/sp_pro_round_black_semibold"
                    android:text="@={view_model.full_name, default=NGUYEN_NHAT_KHANG}"
                    android:textSize="@dimen/_15ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_avatar" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    app:layout_constraintTop_toBottomOf="@+id/card_avatar">
                    <LinearLayout style="@style/layout_label_profile">
                        <ImageView
                            style="@style/icon_label_profile"
                            android:src="@drawable/ic_email"/>
                        <TextView
                            style="@style/text_label_profile"
                            android:text="@={view_model.email, default=Email}"/>
                    </LinearLayout>
                    <LinearLayout style="@style/layout_label_profile">
                        <ImageView
                            style="@style/icon_label_profile"
                            android:src="@drawable/ic_contact_phone"/>
                        <TextView
                            style="@style/text_label_profile"
                            android:text="@={view_model.phone_number, default=Phone}" />
                    </LinearLayout>
                    <LinearLayout style="@style/layout_label_profile">
                        <ImageView
                            style="@style/icon_label_profile"
                            android:src="@drawable/ic_gender"/>
                        <TextView
                            android:layout_gravity="center"
                            style="@style/text_label_profile"
                            android:text="@={view_model.gender, default=Gender}" />
                    </LinearLayout>
                    <LinearLayout style="@style/layout_label_profile">
                        <ImageView
                            style="@style/icon_label_profile"
                            android:src="@drawable/ic_home" />
                        <TextView
                            style="@style/text_label_profile"
                            android:text="@={view_model.gender, default=Address}" />
                    </LinearLayout>
                    <LinearLayout style="@style/layout_label_profile" >
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_open_view_id_card"
                            style="@style/btn_primary_outline"
                            android:layout_marginStart="0dp"
                            android:layout_marginEnd="0dp"
                            android:textSize="@dimen/_12ssp"
                            android:layout_height="@dimen/_20sdp"
                            android:text="@string/view_id_card"
                            />
                    </LinearLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </RelativeLayout>
</layout>