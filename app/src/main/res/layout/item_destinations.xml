<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/_15sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/_15sdp">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/ic_car_and_road"/>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_20sdp"
                android:src="@drawable/ic_clock" />

            <TextView
                android:id="@+id/txt_time_road"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:breakStrategy="simple"
                android:fontFamily="@font/sp_pro_round_regular"
                android:text="@string/time"
                android:textAlignment="inherit"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_20sdp"
                android:src="@drawable/ic_route_distance" />

            <TextView
                android:id="@+id/txt_distance_road"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:breakStrategy="simple"
                android:fontFamily="@font/sp_pro_round_regular"
                android:text="@string/distance"
                android:textAlignment="inherit"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_20sdp"
            android:src="@drawable/ic_placeholder_green" />
        <TextView
            android:id="@+id/txt_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/address"
            android:breakStrategy="simple"
            android:fontFamily="@font/sp_pro_round_regular"
            android:textAlignment="inherit"
            android:textSize="@dimen/_12ssp" />
    </LinearLayout>
</LinearLayout>