<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/_15sdp"
    android:background="@drawable/shape_bg_item"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_avatar"
            android:layout_height="@dimen/_45sdp"
            android:layout_width="@dimen/_45sdp"
            android:layout_gravity="center"
            android:background="@color/gray"
            android:scaleType="fitXY"
            app:riv_corner_radius="30dip"
            app:riv_mutate_background="true"
            app:riv_oval="true"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"
            android:layout_alignEnd="@id/img_avatar"
            android:layout_alignBottom="@id/img_avatar"
            android:id="@+id/icon_online_status"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/shape_online_status"
            android:layout_width="@dimen/_13sdp"
            android:layout_height="@dimen/_13sdp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginStart="@dimen/_15sdp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt_full_name"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sp_pro_round_black"
            android:text="@string/full_name"/>
        <TextView
            android:id="@+id/txt_last_message"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sp_pro_round_regular"
            android:text="@string/full_name"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginStart="@dimen/_15sdp"
        android:orientation="vertical"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt_last_message_time"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sp_pro_round_regular"
            android:text="11:00"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"
            android:id="@+id/icon_has_message"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/shape_circle_orange_red"
            android:layout_width="@dimen/_13sdp"
            android:layout_height="@dimen/_13sdp"/>
    </LinearLayout>
</LinearLayout>