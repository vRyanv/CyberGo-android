<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="view_model"
            type="com.tech.cybercars.ui.main.fragment.account.driver_register.DriverRegistrationViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_license_plates"
                style="@style/input"
                android:layout_marginTop="@dimen/_15sdp"
                app:errorEnabled="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/edit_text_input"
                    android:text="@={view_model.license_plates}"
                    android:hint="@string/license_plates" />

            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:id="@+id/title_front_vehicle"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/input_license_plates"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_front_id_card"
                    style="@style/form_label"
                    android:layout_margin="0dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:text="@string/front_vehicle"
                    app:layout_constraintBottom_toTopOf="@+id/img_front_id_card"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/btn_upload_front_vehicle"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/shape_icon_sub_button"
                        android:scaleType="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_img_upload" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/img_front_transport"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginHorizontal="@dimen/padding_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/shape_btn_outline"
                android:scaleType="centerInside"
                android:src="@drawable/ic_front_car"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_front_vehicle" />
            <LinearLayout
                android:id="@+id/title_back_vehicle"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/img_front_transport"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_back_driver_transport"
                    style="@style/form_label"
                    android:layout_margin="0dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:text="@string/back_vehicle"
                    app:layout_constraintBottom_toTopOf="@+id/img_front_transport"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/btn_upload_back_vehicle"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/shape_icon_sub_button"
                        android:scaleType="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_img_upload" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/img_back_transport"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginHorizontal="@dimen/padding_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/shape_btn_outline"
                android:scaleType="centerInside"
                android:src="@drawable/ic_side_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_back_vehicle" />
            <LinearLayout
                android:id="@+id/label_right_transport"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/img_back_transport"
                android:orientation="horizontal">

                <TextView
                    style="@style/form_label"
                    android:layout_margin="0dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:text="@string/right_side_vehicle"
                    app:layout_constraintBottom_toTopOf="@+id/img_front_transport"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/btn_upload_right_vehicle"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/shape_icon_sub_button"
                        android:scaleType="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_img_upload" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/img_right_transport"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginHorizontal="@dimen/padding_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/shape_btn_outline"
                android:scaleType="centerInside"
                android:src="@drawable/ic_side_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_right_transport" />
            <LinearLayout
                android:id="@+id/label_left_transport"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/img_right_transport"
                android:orientation="horizontal">

                <TextView
                    style="@style/form_label"
                    android:layout_margin="0dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:text="@string/right_side_vehicle"
                    app:layout_constraintBottom_toTopOf="@+id/img_front_transport"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/btn_upload_left_vehicle"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/shape_icon_sub_button"
                        android:scaleType="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_img_upload" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/img_left_transport"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginHorizontal="@dimen/padding_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/shape_btn_outline"
                android:scaleType="centerInside"
                android:src="@drawable/ic_back_car"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_left_transport" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>