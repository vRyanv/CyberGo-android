<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="view_model"
            type="com.tech.cybercars.ui.main.fragment.account.my_vehicle.vehicle_detail.VehicleDetailViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:id="@+id/wrapper_vehicle_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    style="@style/form_label"
                    android:layout_margin="0dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:text="@string/vehicle_type"
                    app:layout_constraintBottom_toTopOf="@+id/img_front_id_card"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />
                <ImageButton
                    android:id="@+id/img_vehicle_type"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@drawable/shape_icon_sub_button"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_16sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_car" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_vehicle_name"
                style="@style/form_label"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="vehicle_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wrapper_vehicle_type" />

            <LinearLayout
                android:id="@+id/label_front_id_card"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_vehicle_name"
                android:orientation="horizontal">
                <TextView
                    style="@style/form_label"
                    android:layout_margin="0dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:text="@string/front_vehicle_registration_certificate"
                    app:layout_constraintBottom_toTopOf="@+id/img_front_id_card"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />


            </LinearLayout>
            <com.makeramen.roundedimageview.RoundedImageView
                app:riv_corner_radius="8dip"
                android:id="@+id/img_front_certificate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginHorizontal="@dimen/padding_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/shape_btn_outline"
                android:scaleType="centerInside"
                android:src="@drawable/thumb_id_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_front_id_card" />
            <LinearLayout
                android:id="@+id/label_back_id_card"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/img_front_certificate"
                android:orientation="horizontal">
                <TextView
                    style="@style/form_label"
                    android:layout_margin="0dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:text="@string/back_of_vehicle_registration_certificate"
                    app:layout_constraintBottom_toTopOf="@+id/img_front_id_card"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />
            </LinearLayout>

            <com.makeramen.roundedimageview.RoundedImageView
                app:riv_corner_radius="8dip"
                android:id="@+id/img_back_certificate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginHorizontal="@dimen/padding_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/shape_btn_outline"
                android:scaleType="centerInside"
                android:src="@drawable/thumb_id_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_back_id_card" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>