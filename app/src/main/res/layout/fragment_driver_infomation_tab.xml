<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="view_model"
            type="com.tech.cybercars.ui.main.fragment.setting.driver_register.DriverRegistrationViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_identity_card"
                style="@style/input"
                android:layout_marginTop="@dimen/_15sdp"
                app:errorEnabled="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/edit_text_input"
                    android:text="@={view_model.id_number}"
                    android:hint="@string/identity_number" />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/label_front_id_card"
                style="@style/form_label"
                android:text="@string/front_id_card"
                app:layout_constraintBottom_toTopOf="@+id/img_front_id_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/input_identity_card" />

            <ImageView
                android:id="@+id/img_front_id_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginHorizontal="@dimen/padding_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/shape_btn_outline"
                android:scaleType="centerInside"
                android:src="@drawable/thumb_id_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_front_id_card" />

            <TextView
                android:id="@+id/label_back_id_card"
                style="@style/form_label"
                android:text="@string/front_id_card"
                app:layout_constraintBottom_toTopOf="@+id/img_back_id_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_front_id_card" />

            <ImageView
                android:id="@+id/img_back_id_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginHorizontal="@dimen/padding_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/shape_btn_outline"
                android:scaleType="centerInside"
                android:src="@drawable/thumb_id_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_back_id_card" />

            <LinearLayout
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/padding_horizontal"
                android:layout_height="@dimen/_200sdp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/img_back_id_card" >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/_15sdp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sp_pro_round_medium"
                        android:textSize="@dimen/_12ssp"
                        android:text="@string/driver_avatar"/>

                    <ImageView
                        android:id="@+id/img_driver_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_btn_outline"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_user" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:fontFamily="@font/sp_pro_round_medium"
                        android:textSize="@dimen/_12ssp"
                        android:layout_height="wrap_content"
                        android:text="@string/curriculum_vitae"/>
                    <ImageView
                        android:id="@+id/img_curriculum_vitae"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/shape_btn_outline"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_contact"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>