<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="view_model"
            type="com.tech.cybercars.ui.main.fragment.setting.driver_register.DriverRegistrationViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_vehicle_type"
                style="@style/input"
                android:layout_marginTop="@dimen/_15sdp"
                android:focusable="false"
                app:errorIconDrawable="@null"
                app:errorEnabled="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <com.google.android.material.textfield.TextInputEditText
                    style="@style/edit_text_input"
                    android:enabled="true"
                    android:focusable="false"
                    android:hint="@string/vehicle_type"
                    android:inputType="none"
                    android:text="@={view_model.vehicle_type}" />
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:id="@+id/label_front_id_card"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/input_vehicle_type"
                android:orientation="horizontal">
                <TextView
                    style="@style/form_label"
                    android:layout_margin="0dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:text="@string/front_vehicle_registration_certificate"
                    app:layout_constraintBottom_toTopOf="@+id/img_front_id_card"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/btn_upload_front_certificate"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/shape_icon_sub_button"
                        android:scaleType="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_img_upload" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/img_front_certificate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginHorizontal="@dimen/padding_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/shape_btn_outline"
                android:scaleType="centerInside"
                android:src="@drawable/thumb_id_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/label_front_id_card" />
            <LinearLayout
                android:id="@+id/label_back_id_card"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/img_front_certificate"
                android:orientation="horizontal">
                <TextView
                    style="@style/form_label"
                    android:layout_margin="0dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:text="@string/back_of_vehicle_registration_certificate"
                    app:layout_constraintBottom_toTopOf="@+id/img_front_id_card"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/btn_upload_back_certificate"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/shape_icon_sub_button"
                        android:scaleType="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_img_upload" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/img_back_certificate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginHorizontal="@dimen/padding_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/shape_btn_outline"
                android:scaleType="centerInside"
                android:src="@drawable/thumb_id_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_back_id_card" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>